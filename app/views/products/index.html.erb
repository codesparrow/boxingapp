<div class="container">
 <h1>Listing products</h1>

 <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Colour</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody id="products">
    <% @products.each do |product| %>
     <%= render partial: "product", collection: @products %>
    <% end %>
   </tbody>
 </table>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
